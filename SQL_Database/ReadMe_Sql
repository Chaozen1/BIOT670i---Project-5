'''
import pandas as pd
from sqlalchemy import create_engine
import configparser

# --- Load Database Configuration ---
config = configparser.ConfigParser()
config.read('config.ini.template') # Read the configuration file

db_user = config['database']['user']
db_password = config['database']['password']
db_host = config['database']['host']
db_port = config['database']['port']
db_name = config['database']['database_name']

# --- Create Database Connection ---
try:
    connection_str = f'mysql+mysqlconnector://{db_user}:{db_password}@{db_host}:{db_port}/{db_name}'
    db_engine = create_engine(connection_str)
    print("Successfully connected to the database!")
except Exception as e:
    print(f"Error connecting to database: {e}")
    exit()

# --- Your Analysis Code ---
# The rest of your code works exactly the same
sql_query = """
SELECT
    sd.Sample_Name,
    sd.Meat_Type,
    spoil.Spoilage_level 
FROM
    Sample_data AS sd
LEFT JOIN
    Spoilage_data AS spoil ON sd.Sample_Name = spoil.Sample_Name;
"""

df = pd.read_sql_query(sql_query, db_engine)

print("Data successfully loaded into DataFrame:")
print(df.head())
